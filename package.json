{
  "name": "backend-static-testing-setup",
  "type": "module",
  "version": "1.0.0",
  "description": "Static testing like eslint, prettier etc.",
  "scripts": {
    "test": "jest",
    "test:staged": "jest --onlyChanged",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore --write \"src**/*.+(js|json)\"",
    "format": "npm run lint -- --fix",
    "validate": "npm run lint && npm run test -- --onlyChanged",
    "prepare": "husky install",
    "start": "node ./src/index.js",
    "start:prod": "pm2 start --env production",
    "start:local": "nodemon --config .nodemonrc.json",
    "clinic:doctor": "NODE_ENV=local clinic doctor --on-port 'autocannon localhost:$PORT/todos' -- node ./dist/index.js",
    "clinic:flame": "NODE_ENV=local clinic flame --on-port 'autocannon localhost:$PORT/todos' -- node ./dist/index.js",
    "clinic:bubbleprof": "NODE_ENV=local clinic bubbleprof --on-port 'autocannon localhost:$PORT/todos' -- node ./dist/index.js"
  },
  "author": "jatin parate <jatin.parate@mlveda.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "autocannon": "^6.5.0",
    "clinic": "^9.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "supertest": "^6.3.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-errors": "^1.8.1",
    "log4js": "^6.7.0",
    "mongoose": "^6.7.2",
    "morgan": "^1.10.0",
    "pm2": "^5.2.2"
  }
}
